<p style="color: green"><%= notice %></p>

<%= render @beer_club %>

<div>
    <strong>Members:</strong>
    <% if @beer_club.members.empty?%>
      <%= "No members at the moment."%>
    <% else %>
      <ul>
        <% @beer_club.members.each do |member| %>
          <li> <%= link_to "#{member.username}", member %> 
          </li>
        <% end %>
      </ul>
    <% end %>
</div>

<% if current_user %>
  <% if @beer_club.members.include? current_user %>
    <% @member = current_user.memberships.where(beer_club_id: @beer_club.id)[0]%>
    <div>
      <%= form_for(@member, method: :delete) do |form| %>
        <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.hidden_field :membership_id, value: @member.id%>
        <%= @membership.id %>
        <%= form.submit "End the membership" %>
        
      <% end %>
    </div>
  <% else %>
    <div>
      <%= form_with(model: @membership) do |form| %>
        <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.submit "Join the beer club" %>
      <% end %>
    </div>
  <% end %>
<% end %>
  
<div>
  <%= link_to "Edit this beer club", edit_beer_club_path(@beer_club) if current_user %><br>
  <%= link_to "Back to beer clubs", beer_clubs_path %><br>

  <%= button_to "Destroy this beer club", @beer_club, method: :delete if current_user %>
</div>
