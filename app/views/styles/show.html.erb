<%= render @style %>

<div id="all styles">
<strong>Beers:</strong>
  <ul>
    <% @beers.each do |beer| %>
      <% if beer.style == @style %>
        <li><%= link_to beer.name, beer %> 
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to "Edit this style", edit_style_path(@style) %> |
  <%= link_to "Back to styles", styles_path %>

  <%= button_to "Destroy this style", @style, method: :delete %>
</div>
