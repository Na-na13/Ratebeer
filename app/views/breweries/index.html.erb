<h1>Breweries</h1>

<h2>Active</h2>

<p><strong>Number of active breweries: </strong><%= @active_breweries.count %></p>

<div id="breweries">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= link_to "Brewery", breweries_path(order: "name")%></th>
        <th><%= link_to "Founded", breweries_path(order: "year")%></th>
        <th><%= link_to "Beers", breweries_path(order: "beers")%></th>
      </tr>
    </thead>
    <% @active_breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= brewery.beers.count %>
      </tr>
    <% end %>
  </table>
</div>

<h2>Retired</h2>

<p><strong>Number of retired breweries: </strong><%= @retired_breweries.count %></p>

<div id="retired-breweries">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= link_to "Brewery", breweries_path(order: "name")%></th>
        <th><%= link_to "Founded", breweries_path(order: "year")%></th>
        <th><%= link_to "Beers", breweries_path(order: "beers")%></th>
      </tr>
    </thead>
    <% @retired_breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= brewery.beers.count %>
      </tr>
    <% end %>
  </table>
</div>
<%= link_to "List of Beers", beers_path %><br>
<%= link_to "New brewery", new_brewery_path, class: "btn btn-primary" if current_user%><br>
