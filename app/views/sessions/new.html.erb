<h1>Sign in</h1>

<%= form_with url: session_path, method: :post do |form| %>
  <div class="mb-3">
    <%= form.label :username, style: "display: block", class:"form-label" %>
    <%= form.text_field :username, class:"form-control", id:"exampleFormControlInput1", placeholder:"Username" %>
  </div>
  <div class="mb-3">
    <%= form.label :password, style: "display: block", class:"form-label" %>
    <%= form.password_field :password, class:"form-control", id:"exampleFormControlInput1", placeholder:"Password" %>
  </div>
  <div class="col-12">
    <%= form.button "Login", class: "btn btn-primary", type: "submit" %>
  </div>
<% end %>
